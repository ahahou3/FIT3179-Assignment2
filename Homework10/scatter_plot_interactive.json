{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "data/country_wise_latest.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "WHORegion_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "Africa",
          "South-East Asia",
          "Western Pacific"
        ],
        "labels": [
          "Show All",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "Africa",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "WHO Region Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Active > 0"
    },
    {
      "filter": "datum.Deaths > 0"
    },
    {
      "filter": "datum.Population > Population_Above"
    },
    {
      "filter": "WHORegion_selection == null || datum.WHORegion == WHORegion_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Confirmed",
      "type": "quantitative",
      "title": "Confirmed Cases",
      "axis": {
        "tickCount": 7
      },
      "scale": {
        "type": "log",
        "domain": [
          1,
          10000000
        ]
      }
    },
    "y": {
      "field": "Deaths",
      "type": "quantitative",
      "axis": {
        "tickCount": 6
      },
      "scale": {
        "type": "log",
        "domain": [
          1,
          1000000
        ]
      }
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              1000000,
              10000000,
              50000000,
              100000000,
              500000000
            ],
            "range": [
              10,
              50,
              150,
              200,
              300,
              400
            ]
          },
          "legend": {
            "format": ".1s"
          }
        },
        "color": {
          "field": "WHORegion",
          "type": "nominal",
          "scale": {
            "domain": [
              "Americas",
              "Eastern Mediterranean",
              "Europe",
              "Africa",
              "South-East Asia",
              "Western Pacific"
            ],
            "range": [
              "#FF0000",
              "#0000FF",
              "#00FF00",
              "#FFFF00",
              "#800080",
              "#FFA500"
            ]
          }
        },
        "opacity": {
          "value": 0.6
        },
        "tooltip": [
          {
            "field": "Country/Region",
            "type": "nominal"
          },
          {
            "field": "Confirmed",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Active",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Deaths",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Recovered",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "Country/Region",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['Country/Region'] == 'China' || datum['Country/Region'] == 'India' || datum['Country/Region'] == 'Australia' || datum['Country/Region'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States of America'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "Country/Region",
            "type": "nominal"
          },
          {
            "field": "Confirmed",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Active",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Deaths",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Recovered",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    }
  ]
}