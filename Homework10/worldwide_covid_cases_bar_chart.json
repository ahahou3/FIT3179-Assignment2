{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "repeat": [
    "Confirmed",
    "Deaths",
    "Recovered",
    "Active"
  ],
  "columns": 2,
  "spec": {
    "width": 400,
    "height": 300,
    "layer": [
      {
        "data": {
          "url": "data/full_grouped.csv"
        },
        "mark": {
          "type": "bar",
          "cornerRadiusTopLeft": 3,
          "cornerRadiusTopRight": 3
        },
        "encoding": {
          "x": {
            "timeUnit": "yearmonth",
            "field": "Date",
            "type": "ordinal",
            "title":"Date(month-year)"
          },
          "y": {
            "aggregate": "sum",
            "field": {
              "repeat": "repeat"
            },
            "type": "quantitative"
          },
          "color": {
            "field": "WHO Region"
          },
          "tooltip": [
            {
              "field": "WHO Region",
              "type": "nominal"
            }
          ]
        }
      },
      {
        "data": {
          "values": [
            {
              "Confirmed": "Confirmed",
              "Deaths": "Deaths",
              "Recovered": "Recovered",
              "Active": "Active"
            }
          ]
        },
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "bottom",
          "x": "width",
          "y": 0
        },
        "encoding": {
          "text": {
            "field": {
              "repeat": "repeat"
            }
          }
        }
      }
    ]
  }
}