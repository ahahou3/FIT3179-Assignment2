{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "COVID-19 Confirmed Cases (30 Jan 2020)",
  "width": 900,
  "height": 400,
  "data": {
    "url": "js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "js/Oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/country_wise_latest.csv"
            },
            "key": "Country/Region",
            "fields": [
              "Confirmed"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "cursor":"pointer"
      },
      "encoding": {
        "color": {
          "field": "Confirmed",
          "scale": {
            "type": "threshold",
            "domain":[
              0,
              
              500,
              1000,

              10000,
              50000,
              100000,
              500000
            ],
            "scheme": "reds"
          },
          "legend": {
            "format": ".1s",
            "title": "Confirmed"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Confirmed",
            "type": "quantitative",
            "format":",",
            "title":"Confirmed Cases"
          }
        ]
      }
    }
  ]
}